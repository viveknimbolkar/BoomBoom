    <div class="container">
        <div class="row">
            <div class="col-lg-6 shadow p-4">
                <center>
                    <h1 class="text-2xl p-2">Personal info</h1>
                </center>
                <div class="row">
                    <div class="col-lg-6">
                        <input type="text" class="form-control m-1" required name="firstname" id="fname"
                            placeholder="Firstname">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control m-1" name="lastname" id="fname" placeholder="Lastname">
                    </div>
                    <div class="col-lg-6">
                        <input type="email" class="form-control m-1" name="email" id="fname"
